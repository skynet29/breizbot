<!DOCTYPE html>
<html>
<head>
	<title><%= appName %></title>
	<meta name="viewport" content="width=device-width">
	<link rel="stylesheet" type="text/css" href="/brainjs/css/brainjs.css">
	<link rel="stylesheet" type="text/css" href="/breizbot.css">
	<script src="/brainjs/brainjs.js"></script>
	<script src="/breizbot.js"></script>
	<script src="/webapps/<%= appName %>/app.js"></script>

    <% styles.forEach(function(style) {%>
        <link rel="stylesheet" type="text/css" href="<%= style %>">
    <%}) %>  	

    <% scripts.forEach(function(script) {%>
        <script src="<%= script %>"></script>
    <%}) %>      
</head>

<style type="text/css">
html, body {
	height: 100%;
	margin: 0;
	overflow: hidden;
}
	
body {
	display: flex;
	flex-direction: column;
}



</style>

<script>
	$(function() {
		$$.service.configureService('breizbot.params', '<%- params %>')
		
		$$.viewController('body')
	})

</script>

<body>
	<div bn-control="breizbot.header" data-user-name="<%= pseudo %>" data-title="<%= title %>"></div>
	<div bn-control="brainjs.pager" data-root-page="rootPage"  style="flex: 1; overflow: hidden;"></div>
</body>

</html>